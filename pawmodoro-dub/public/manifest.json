{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "pawmodoro extension",
    "description": "Pawmodoro is a Chrome extension that helps you stay focused and organized by combining a Pomodoro timer with an adorable virtual pet and a built-in to-do list. Stay productive, interact with your pet, and gamify your study sessions, all in one playful browser extension.",
    "permissions": ["tabs", "sidePanel", "storage", "scripting"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/goodicon.png",
            "32": "images/goodicon.png",
            "48": "images/goodicon.png",
            "128": "images/goodicon.png"
        }
    },
    
    "icons": {
        "16": "images/goodicon.png",
        "32": "images/goodicon.png",
        "48": "images/goodicon.png",
        "128": "images/goodicon.png"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}